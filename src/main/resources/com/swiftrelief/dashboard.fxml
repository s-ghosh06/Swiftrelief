<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="com.swiftrelief.DashboardController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="650"
            stylesheets="@style.css">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="dashboard-header">
            <Label text="🚨 SwiftRelief Dashboard" styleClass="dashboard-title"/>
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" styleClass="sidebar">
            <Button text="👥 Volunteers" fx:id="volunteerBtn" onAction="#showVolunteer" styleClass="sidebar-button"/>
            <Button text="📦 Resources" fx:id="resourceBtn" onAction="#showResource" styleClass="sidebar-button"/>
            <Button text="📋 Requests" fx:id="requestBtn" onAction="#showRequest" styleClass="sidebar-button"/>
            <Button text="🌪️ Disaster Updates" fx:id="disasterBtn" onAction="#showDisaster" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- MAIN CONTENT AREA -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane"/>
    </center>

</BorderPane>
