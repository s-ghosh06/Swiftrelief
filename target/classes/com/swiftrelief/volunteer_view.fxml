<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.swiftrelief.VolunteerController"
            prefWidth="900" prefHeight="600"
            stylesheets="@style.css"
            style="-fx-background-color: #F5F6FA;">

    <children>
        <VBox spacing="20"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-background-color: linear-gradient(to right, #0078D7, #00A6FF);
                         -fx-background-radius: 8;
                         -fx-padding: 12;">
                <Label text="🤝 Volunteer Management"
                       style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Volunteer Input Section -->
            <VBox spacing="15"
                  style="-fx-background-color: white;
                         -fx-background-radius: 10;
                         -fx-padding: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <children>
                        <Label text="👤 Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>

                        <Label text="🎂 Age:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="ageField" GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="input-field"/>

                        <Label text="📞 Contact:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="contactField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field"/>

                        <Label text="📍 Location:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="locationField" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="input-field"/>

                        <Label text="💡 Skill:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="skillField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="input-field"/>

                        <Label text="✅ Available:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <CheckBox fx:id="availabilityCheckBox" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button text="➕ Add Volunteer" onAction="#addVolunteer" styleClass="action-button"/>
                    <Button text="🗑️ Delete Selected" onAction="#deleteSelected"
                            styleClass="action-button"
                            style="-fx-background-color: linear-gradient(to right, #E74C3C, #C0392B);"/>
                    <Button text="🔄 Refresh" onAction="#refreshTable"
                            styleClass="action-button"
                            style="-fx-background-color: linear-gradient(to right, #F1C40F, #D4AC0D);"/>
                </HBox>
            </VBox>

            <!-- Table Section -->
            <VBox spacing="10"
                  style="-fx-background-color: white;
                         -fx-background-radius: 10;
                         -fx-padding: 15;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <Label text="📋 Volunteer List"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

                <TableView fx:id="volunteerTable" prefHeight="350" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="180"/>
                        <TableColumn fx:id="ageColumn" text="Age" prefWidth="80"/>
                        <TableColumn fx:id="contactColumn" text="Contact" prefWidth="150"/>
                        <TableColumn fx:id="locationColumn" text="Location" prefWidth="150"/>
                        <TableColumn fx:id="skillColumn" text="Skill" prefWidth="150"/>
                        <TableColumn fx:id="availabilityColumn" text="Available" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
